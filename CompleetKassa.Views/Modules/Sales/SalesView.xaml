<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CompleetKassa.Views"
             xmlns:product="clr-namespace:CompleetKassa.Views.Controls"
             xmlns:i1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
			 xmlns:c="clr-namespace:CompleetKassa.Converters;assembly=CompleetKassa.Converters"
             xmlns:viewModels="clr-namespace:CompleetKassa.ViewModels;assembly=CompleetKassa.ViewModels"
             xmlns:views="clr-namespace:CompleetKassa.Views;assembly=CompleetKassa.Views"
             xmlns:sysglb="clr-namespace:System.Globalization;assembly=mscorlib"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"  
             xmlns:r="clr-namespace:Org.Interactivity.Recognizer;assembly=Org.Interactivity.Recognizer"
             xmlns:eim="clr-namespace:Microsoft.Expression.Interactivity.Media;assembly=Microsoft.Expression.Interactions" xmlns:Customers="clr-namespace:CompleetKassa.Views.Modules.Customers" x:Class="CompleetKassa.Views.SalesView"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366"
             SizeChanged="UserControl_SizeChanged_1"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             >
    <UserControl.Resources>





        <DataTemplate x:Key="PurchasedTemplate">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Price}" />
                <TextBlock Text="{Binding Label}" />
                <TextBlock Text="{Binding Quantity}" />
                <TextBlock Text="{Binding Discount}" />
            </StackPanel>
        </DataTemplate>

        <Style x:Key="MainFont">
            <Setter Property="TextElement.FontFamily" Value="Open Sans Semibold"/>
        </Style>

        <Style x:Key="SemiFont">
            <Setter Property="FrameworkElement.Margin" Value="4"/>
            <Setter Property="TextElement.FontFamily" Value="Open Sans Light"/>
        </Style>


        <Style x:Key="ReceiptFont">
            <Setter Property="TextElement.FontFamily" Value="Open Sans Semibold"/>
            <Setter Property="TextElement.FontSize" Value="15"/>
            <Setter Property="TextElement.Foreground" Value="#7C7C7C"/>
        </Style>

        <ControlTemplate x:Key="SelectedItem" TargetType="{x:Type ListBoxItem}">
            <Border x:Name="Bd" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" 
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            
                                  />
            </Border>
        </ControlTemplate>
        <SolidColorBrush x:Key="Background" Color="#2E4051"/>


        <Style x:Key="SideButtons" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#1F2E3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A2530" />
                </Trigger>
                <EventTrigger RoutedEvent="UIElement.PreviewMouseDown">
                    <SoundPlayerAction Source="pack://application:,,,/CompleetKassa.Views;component/Sounds/buttonpress.wav" />
                </EventTrigger>
            </Style.Triggers>
        </Style>



        <Style TargetType="{x:Type Button}" x:Key="TabButtonFirst">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="0,0,0,0" Background="Red">
                            <ContentPresenter x:Name="contentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TextBox}" x:Key="TxtBoxStyle">
            <Setter Property="CaretBrush" Value="#1F2E3C"/>
            <Setter Property="TextElement.Foreground" Value="White"/>
            <Setter Property="TextElement.FontFamily" Value="Open Sans Semibold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="Transparent"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style TargetType="{x:Type Button}" x:Key="ReceiptSideButtons2">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"  CornerRadius="0,29,29,0"  HorizontalAlignment="Left" MaxHeight="65" MaxWidth="78">

                            <ContentPresenter RenderTransformOrigin="0.5,0.5" x:Name="RootGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="RootGrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="ReceiptSideButtons">
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid  >
                            <Border Background="{TemplateBinding Background}"/>
                            <Grid RenderTransformOrigin="0.5,0.5" x:Name="RootGrid">
                                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            </Grid>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="RootGrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type RepeatButton}" x:Key="EmptyButton">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Grid RenderTransformOrigin="0.5,0.5" x:Name="RootGrid">
                            <Border Background="{TemplateBinding Background}" />

                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="RootGrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.PreviewMouseDown">
                    <SoundPlayerAction Source="pack://application:,,,/CompleetKassa.Views;component/Sounds/buttonpress.wav" />
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="EmptyButton2">

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid RenderTransformOrigin="0.5,0.5" x:Name="RootGrid">
                            <Border Background="{TemplateBinding Background}" />

                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="RootGrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UIElement.PreviewMouseDown">
                    <SoundPlayerAction Source="pack://application:,,,/CompleetKassa.Views;component/Sounds/buttonpress.wav" />
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <Style TargetType="{x:Type Button}" x:Key="CircleButton2">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" x:Name="elipse"/>
                            <Ellipse Fill="#0AC450" Width="20" Height="20"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <!--<ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background"  Value="Red"/>
                            </Trigger>
                        </ControlTemplate.Triggers>-->

                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="{x:Type Button}" x:Key="CircleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border  Background="{TemplateBinding Background}" CornerRadius="100">
                            <ContentPresenter RenderTransformOrigin="0.5,0.5" x:Name="rootgrid" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="rootgrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ToggleButton}" x:Key="RadButton">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border RenderTransformOrigin="0.5,0.5" x:Name="rootgrid" Background="{TemplateBinding Background}" CornerRadius="100">
                            <Border  Margin="5" CornerRadius="100" Background="#0AC450" x:Name="elps" Visibility="Visible"/>

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsChecked" Value ="True">
                                <Setter TargetName="elps" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property ="IsChecked" Value ="False">
                                <Setter TargetName="elps" Property="Visibility" Value="Hidden" />
                            </Trigger>
                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="rootgrid" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ToggleButton}" x:Key="PayButtons">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="elps1" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="White" BorderThickness="0">
                            <ContentPresenter  x:Name="Root" RenderTransformOrigin="0.5,0.5"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property ="IsChecked" Value ="True">
                                <Setter TargetName="elps1" Property="Background" Value="#6FBC69" />
                                <Setter TargetName="elps1" Property="BorderThickness" Value="2" />
                            </Trigger>
                            <Trigger Property ="IsChecked" Value ="False">
                                <Setter TargetName="elps1" Property="Background" Value="#2E4051" />
                                <Setter TargetName="elps1" Property="BorderThickness" Value="0" />
                            </Trigger>

                            <Trigger Property ="IsPressed" Value ="True">
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>

                </Setter.Value>
            </Setter>
        </Style>




    </UserControl.Resources>

    <Grid Background="#2E4051">



        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <Grid Background="#0193C6">

            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-50,0,0,0">

                <TextBlock Foreground="#fff" Text="compleetshop" x:Name="Compleet" FontFamily="Open Sans Semibold" Margin="0,5"/>
            </Viewbox>
            <Button x:Name="ButtonDelete" Command="{Binding OnDeleteProducts}"  HorizontalAlignment="Left" Height="17" Margin="44,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>
            <Button x:Name="ButtonOpenDelete" Command="{Binding OnDeleteOpen}" CommandParameter="Open" HorizontalAlignment="Left" Height="17" Margin="44,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>

            <Button x:Name="ButtonSelectMultiple" Command="{Binding OnPurchaseSelectMultiple}" HorizontalAlignment="Left" Height="17" Margin="44,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>

            <Button x:Name="ButtonSelectAll" Command="{Binding OnPurchaseSelectAll}" HorizontalAlignment="Left" Height="17" Margin="44,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>

            <Button  Content="Check" Command="{Binding OnSetDollarDiscount}" HorizontalAlignment="Left" Height="17" Margin="254,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>
            <Button x:Name="ButtonQuantityClick" Command="{Binding OnSelectQuantityOption}" CommandParameter="{Binding QuantitySelectOption}" HorizontalAlignment="Left" Height="17" Margin="44,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>
            <Button x:Name="ButtonQuantityLongPress" Command="{Binding OnSelectQuantityOptionLongPress}" CommandParameter="Open" HorizontalAlignment="Left" Height="17" Margin="44,10,0,0" VerticalAlignment="Top" Width="80" Visibility="Hidden"/>
        </Grid>

        <!--Page-->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.2859*" />
                <ColumnDefinition Width="0.0583*" />
                <ColumnDefinition Width="0.1737*" />
                <ColumnDefinition Width="0.481*" />
            </Grid.ColumnDefinitions>

            <!--"{Binding NumpadVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"-->
            <!--Receipt-->
            <Grid Grid.Column="0" x:Name="col1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.0375*" />
                    <RowDefinition Height="0.75*" />
                    <RowDefinition Height="0.0843*" />
                    <RowDefinition Height="0.1282*" />
                </Grid.RowDefinitions>

                <Grid Background="#EBEBEB">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.15*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Visibility="{Binding PrevVisibility}">
                        <Button Command="{Binding OnPreviousReceipt}" Style="{StaticResource EmptyButton2}"  HorizontalAlignment="Left" Margin="3" Background="#EBEBEB">
                            <Image Source="ViewIcons/order_prev.png"/>
                        </Button>

                        <Viewbox >
                            <TextBlock Text="{Binding RemainingOrder}" Style="{StaticResource MainFont}" Foreground="#555555" Margin="0,3,3,3"/>
                        </Viewbox>
                    </StackPanel>


                    <Viewbox  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding ReceiptName, StringFormat=Order \{0\}}" Style="{StaticResource MainFont}" Foreground="#555555" Margin="3"/>
                    </Viewbox>

                    <Button Command="{Binding OnNewReceipt}" Grid.Column="2" Style="{StaticResource EmptyButton2}"  HorizontalAlignment="Right" Margin="3" Background="#EBEBEB">
                        <Image Source="{Binding ReceiptImagePath}"/>
                    </Button>

                    <!--<Button Content="Previous" Command="{Binding OnPreviousReceipt}" Style="{StaticResource EmptyButton2}"  HorizontalAlignment="Left" Margin="3" Background="#EBEBEB">
                       
                    </Button>
                    <Button Content="Next" Command="{Binding OnNextReceipt}" Style="{StaticResource EmptyButton2}"  HorizontalAlignment="Left" Margin="55,3,3,3" Background="#EBEBEB">

                    </Button>-->
                </Grid>



                <!--Receipt-->
                <StackPanel Orientation="Vertical" Background="#fff" Grid.Row="1">




                    <!-- Discount/Amount Popout -->

                    <Grid>

                        <!--Quantity-->
                        <Border x:Name="fold" Background="#CACACA" Height="{Binding ActualHeight, ElementName=discountfold}" Margin="15,3,0,0" CornerRadius="30,0,0,30" Visibility="{Binding QuantityPopVisibility}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>


                                    <Border x:Name="circleSize2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" CornerRadius="50" Background="#0193C6">
                                        <Border.InputBindings>
                                            <MouseBinding Command="{Binding OnApplyQuantityPop}" MouseAction="LeftClick"/>
                                        </Border.InputBindings>
                                        <Image Source="ViewIcons/check.png" Stretch="Uniform" Margin="6"/>

                                    </Border>

                                    <Button  x:Name="selectMulti2"  Background="{Binding SelectionColor}" Style="{StaticResource CircleButton}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="{Binding ActualHeight, ElementName=circleSize2}" Width="{Binding ActualWidth, ElementName=circleSize2}" StylusUp="DeleteButton_StylusUp" StylusDown="DeleteButton_StylusDown"   >
                                        <Image Source="ViewIcons/select.png" Stretch="Uniform" Margin="6"/>
                                    </Button>

                                    <Button  x:Name="ButtonQuantitySelection" Grid.Column="2" Style="{StaticResource CircleButton}"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Height="{Binding ActualHeight, ElementName=circleSize2}" Width="{Binding ActualWidth, ElementName=circleSize2}" Background="#999999" StylusUp="DeleteButton_StylusUp" StylusDown="DeleteButton_StylusDown"  >
                                        <Viewbox Margin="5">
                                            <TextBlock Text="{Binding QuantitySelectOption}" Foreground="White"/>
                                        </Viewbox>
                                    </Button>

                                </Grid>

                                <Border Grid.Column="1" Background="#1F2E3C" 
                                Height="{Binding ActualHeight, ElementName=fold}" 
                                CornerRadius="30,0,0,30" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <RepeatButton Command="{Binding OnIncrementQuantityPop}" Style="{StaticResource EmptyButton}" Background="Transparent" >
                                            <Image Source="ViewIcons/add.png" Margin="10"/>
                                        </RepeatButton>


                                        <Border Grid.Column="1" Background="#EBEBEB" Margin="0,10">
                                            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Foreground="#535353"  Text="{Binding QuantityPop, Mode=TwoWay}" />
                                            </Viewbox>

                                        </Border>
                                        <RepeatButton Command="{Binding OnDecrementQuantityPop}" Grid.Column="2" Style="{StaticResource EmptyButton}" Background="Transparent" >
                                            <Image  Source="ViewIcons/minus.png" Margin="10"/>
                                        </RepeatButton>


                                    </Grid>

                                </Border>
                            </Grid>

                        </Border>
                        <!--Discount fold-->
                        <Border x:Name="foldx" Background="#CACACA" Height="{Binding ActualHeight, ElementName=discountfold}" Margin="15,3,0,0" CornerRadius="30,0,0,30" Visibility="{Binding DiscountPopVisibility}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.4*"/>
                                </Grid.ColumnDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>


                                    <Border  x:Name="circleSize" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5" CornerRadius="50" Background="#0193C6">
                                        <Border.InputBindings>
                                            <MouseBinding Command="{Binding OnApplyDiscountPop}" MouseAction="LeftClick"/>
                                        </Border.InputBindings>
                                        <Image Source="ViewIcons/check.png" Stretch="Uniform" Margin="6"/>

                                    </Border>


                                    <Button  x:Name="selectMulti1"  Background="{Binding SelectionColor}" Style="{StaticResource CircleButton}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="{Binding ActualHeight, ElementName=circleSize}" Width="{Binding ActualWidth, ElementName=circleSize}" StylusUp="DeleteButton_StylusUp" StylusDown="DeleteButton_StylusDown" >
                                        <Image Source="ViewIcons/select.png" Stretch="Uniform" Margin="6"/>
                                    </Button>



                                    <Button  Command="{Binding OnDiscountChangeButton}" Style="{StaticResource CircleButton}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Height="{Binding ActualHeight, ElementName=circleSize}" Width="{Binding ActualWidth, ElementName=circleSize}" Background="#999999">

                                        <Image Source="{Binding DiscountImagePath}" Stretch="Uniform"  Margin="10" />



                                    </Button>

                                </Grid>

                                <Border Grid.Column="1" Background="#1F2E3C" 
                                Height="{Binding ActualHeight, ElementName=foldx}" 
                                CornerRadius="30,0,0,30" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <RepeatButton Command="{Binding OnIncrementDiscountPop}" Style="{StaticResource EmptyButton}" Background="Transparent" >
                                            <Image Source="ViewIcons/add.png" Margin="10"/>
                                        </RepeatButton>


                                        <Border Grid.Column="1" Background="#EBEBEB" Margin="0,10" Visibility="{Binding DiscountPercentText}" >
                                            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Foreground="#535353"  Text="{Binding DiscountPercentage, Mode=TwoWay, StringFormat=\{0\}%}" />
                                            </Viewbox>
                                        </Border>

                                        <Border Grid.Column="1" Background="#EBEBEB" Margin="0,10" Visibility="{Binding DiscountDollarText}" >
                                            <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Foreground="#535353" 
                                                           Text="{Binding DiscountDollar, ConverterCulture=nl-NL, Mode=TwoWay, StringFormat=\{0:C\}}"/>
                                            </Viewbox>
                                        </Border>

                                        <RepeatButton Command="{Binding OnDecrementDiscountPop}" Grid.Column="2" Style="{StaticResource EmptyButton}" Background="Transparent" >
                                            <Image  Source="ViewIcons/minus.png" Margin="10"/>
                                        </RepeatButton>


                                    </Grid>

                                </Border>
                            </Grid>

                        </Border>

                        <Grid Height="{Binding ActualHeight, ElementName=sideSize}" Visibility="Collapsed">
                            <Grid Background="#0193C6" Margin="0,0,0,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.15*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="0.15*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Vertical" Grid.Column="1">
                                    <Viewbox x:Name="emailReceipt" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="75,20,75,0" MaxHeight="35">
                                        <TextBlock Style="{StaticResource FontBold}" Text="Email Receipt" Foreground="White"/>
                                    </Viewbox>


                                    <Border Grid.Column="1" Background="#E5E5E5" CornerRadius="15" Height="{Binding ActualHeight, ElementName=emailReceipt}" Margin="20,30,20,5"/>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15" >

                                        <ToggleButton Width="20" Height="20" Margin="15,0,0,0" Style="{StaticResource RadButton}" />

                                        <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0,5,0">
                                            <TextBlock Style="{StaticResource FontBold}" Text="Subscribe to newsletter" Foreground="White"/>
                                        </Viewbox>

                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"  Margin="30">
                                        <Button Style="{StaticResource CircleButton2}" Background="#F67280" Height="45" Width="45" Margin="0,0,10,0">
                                            <Image Source="ViewIcons/cancel.png" Margin="10"/>
                                        </Button>
                                        <Button Style="{StaticResource CircleButton2}" Background="#355C7D" Height="45" Width="45" Margin="10,0,0,0">
                                            <Image Source="ViewIcons/sent.png" Margin="10"/>
                                        </Button>

                                    </StackPanel>


                                </StackPanel>

                                <!--<Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Viewbox VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,25,0,0">
                                    <TextBlock Style="{StaticResource FontBold}" Text="Email Receipt" Foreground="White"/>
                                </Viewbox>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
